@using Sitecore.Feature.Account
@using Sitecore.Foundation.CommerceServer.Managers
@using Sitecore.Mvc

<div class="col-md-12" id="recentOrders">
    <h2>
        @Html.Sitecore().Field(Templates.AccountManager.Fields.OrdersTitle.ToString(), Html.Sitecore().CurrentItem)
        <a href="@StorefrontManager.StorefrontUri("/accountmanagement/myorders")" class="view-all pull-right">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> @Html.Sitecore().Field(Templates.AccountManager.Fields.ViewAllOrdersLabel.ToString(), Html.Sitecore().CurrentItem)
        </a>
    </h2>
    <div id="recentOrdersSection">
        <div data-bind="visible: showLoader">
            <img src="/Images/loading.gif" alt="loading"/>
        </div>
        <div class="table-responsive">
            <table class="table table-hover small-list" style="display: none" data-bind="visible: hasOrders">
                <thead>
                    <tr>
                        <td>@Html.Sitecore().Field(Templates.AccountManager.Fields.DateLabel.ToString(), Html.Sitecore().CurrentItem)</td>
                        <td>@Html.Sitecore().Field(Templates.AccountManager.Fields.OrderNumberLabel.ToString(), Html.Sitecore().CurrentItem)</td>
                        <td>@Html.Sitecore().Field(Templates.AccountManager.Fields.StatusLabel.ToString(), Html.Sitecore().CurrentItem)</td>
                        <td width="10%">&nbsp;</td>
                    </tr>
                </thead>
                <tbody data-bind="foreach: orders">
                    <tr data-bind="css: { 'odd': $index() % 2 == 0 }">
                        <td><a data-bind="attr:{ href: detailsUrl }, text: lastModified"></a></td>
                        <td><a data-bind="attr:{ href: detailsUrl }, text: orderId"></a></td>
                        <td><a data-bind="attr:{ href: detailsUrl }, text: status"></a></td>
                        <td><a data-bind="attr:{ href: detailsUrl }"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="account-profile">
            @Html.Sitecore().Field(Templates.AccountManager.Fields.OrderTableText.ToString(), Html.Sitecore().CurrentItem)
        </div>
    </div>
</div>